#!/bin/bash

set -e

PHP_VERSION=$1
ARCH=$2

SOURCE=/packages
REPOSITORY=/_output/packages/${ARCH}

sudo mkdir -p ${REPOSITORY}

echo "Clearing Build Paths"
sudo chown -R packager:abuild $SOURCE
sudo chown -R packager:abuild $REPOSITORY

echo "Clearing Build Paths"
sudo rm -rf ${SOURCE}/*/pkg ${SOURCE}/*/src ${SOURCE}/*/tmp ${REPOSITORY}/*

echo "Generating Index"
generate-index ${ARCH}

echo "Updating the index of available packages"
sudo apk update

packages=(
  "libxlsxwriter"
  "paxmark"
  "php${PHP_VERSION}"
  "php${PHP_VERSION}-apcu"
  "php${PHP_VERSION}-grpc"
  "php${PHP_VERSION}-imagick"
  "php${PHP_VERSION}-memcached"
  "php${PHP_VERSION}-opentelemetry"
  "php${PHP_VERSION}-redis"
  "php${PHP_VERSION}-spx"
  "php${PHP_VERSION}-xdebug"
)

# Temporary workaround for unavailable packages for PHP 8.5.
if [ "$PHP_VERSION" == "8.5" ]; then
  exclude_packages=(
    "php${PHP_VERSION}-grpc"
    "php${PHP_VERSION}-imagick"
    "php${PHP_VERSION}-spx"
    "php${PHP_VERSION}-xdebug"
  )
  for i in "${exclude_packages[@]}"; do
    packages=(${packages[@]//*$i*})
  done
fi

for package in "${packages[@]}"; do
  echo "Building Package: ${package}"

  cd ${SOURCE}/$package

  # For PHP we also generate tmp directory for some temporary files
  rm -rf tmp

  echo "Clearing Build Paths"
  abuild clean

  echo "Building Package"
  abuild checksum
  abuild -r -K

  echo "Generating Index"
  generate-index ${ARCH}
done
