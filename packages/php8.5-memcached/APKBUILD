# Maintainer: Nick Schuch <nick.schuch@skpr.io>

pkgname=php8.5-memcached
_pkgreal=memcached
pkgver=3.4.0
pkgrel=1
provides="php-memcached=8.5"
pkgdesc="PHP extension for interfacing with memcached via libmemcached library"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php8.5-common>=8.5.0 php8.5-common<8.6.0 php8.5-session>=8.5.0 php8.5-session<8.6.0"
makedepends="php8.5-dev>=8.5.0 php8.5-dev<8.6.0 autoconf libmemcached-dev"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}


sha512sums="
b60fdb7347f8be19f53f67d2bd96ed1423b862a517ad61513d9f736d4cbfe55b9da1e4b13d366968e39a0617e0b98f48e72d0fb357061f3cc093b18f5afad685  memcached-3.4.0.tgz
"
