# Maintainer: "Nick Schuch <nick.schuch@skpr.io>"

pkgname=php8.1-opentelemetry
_pkgreal=opentelemetry
pkgver=1.0.0_beta1
pkgrel=1
provides="php-opentelemetry=8.1"
pkgdesc="OpenTelemetry - OpenTelemetry extension for PHP"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php8.1-common>=8.1.0 php8.1-common<8.2.0 php8.1-session>=8.1.0 php8.1-session<8.2.0"
makedepends="php8.1-dev>=8.1.0 php8.1-dev<8.2.0 autoconf libmemcached-dev"
source="https://github.com/open-telemetry/opentelemetry-php/archive/refs/tags/1.0.0beta1.tar.gz"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$srcdir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$srcdir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}

sha512sums="6d91f0d6c2d9f0a3097d9511748512480e390bee9408adf1fb873e8bbb4959942dfdc8d93b7e6a4bab339899400856f7d4c717f4f9662e02567a4bc0f71da40f  1.0.0beta1.tar.gz"
