# Maintainer: Nick Schuch <nick.schuch@skpr.io>

pkgname=php8.3-redis
_pkgreal=redis
pkgver=6.0.2
pkgrel=3
provides="php-redis=8.3"
pkgdesc="Redis extension for PHP"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php8.3-common>=8.3.0 php8.3-common<8.4.0 php8.3-session>=8.3.0 php8.3-session<8.4.0"
makedepends="php8.3-dev>=8.3.0 php8.3-dev<8.4.0 autoconf"
source="https://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}

sha512sums="
b945d5aa86d3f58e75094369b0f324e987202f104aca7d7b46ba23cfaed54d186bb66931e200dd16d2dbeea11732dd0311da4e3d7485c3b725027f7924652832  redis-5.3.7.tgz
"
