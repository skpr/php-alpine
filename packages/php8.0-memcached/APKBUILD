# Maintainer: "Nick Schuch <nick.schuch@skpr.io>"

pkgname=php8.0-memcached
_pkgreal=memcached
pkgver=3.1.5
pkgrel=1
provides="php-memcached=8.0"
pkgdesc="Memcached extension for PHP"
url="http://pecl.php.net/package/$_pkgreal"
arch="x86_64"
license="PHP-3"
depends="php8.0-common>=8.0.0 php8.0-common<7.5.0 php8.0-session>=8.0.0 php8.0-session<7.5.0"
makedepends="php8.0-dev>=8.0.0 php8.0-dev<7.5.0 autoconf zlib-dev libmemcached-dev cyrus-sasl-dev pcre-dev"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/20_$_pkgreal.ini || return 1
}

sha512sums="87d5fd079fcaad81139785d6766da71b23a1a0fe907d4b22f3a787af148a20412c11df11c4d98c165241658baf0d87c8a6b29de15db07a0f9d1fabc8aec8f0e9  memcached-3.1.5.tgz"
