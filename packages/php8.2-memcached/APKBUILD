# Maintainer: "Nick Schuch <nick.schuch@skpr.io>"

pkgname=php8.2-memcached
_pkgreal=memcached
pkgver=3.2.0_rc2
pkgrel=1
provides="php-memcached=8.2"
pkgdesc="PHP extension for interfacing with memcached via libmemcached library"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="PHP-3"
depends="php8.2-common>=8.2.0 php8.2-common<8.3.0 php8.2-session>=8.2.0 php8.2-session<8.3.0"
makedepends="php8.2-dev>=8.2.0 php8.2-dev<8.3.0 autoconf libmemcached-dev"
source="https://pecl.php.net/get/$_pkgreal-3.2.0RC2.tgz"
builddir="$srcdir/$_pkgreal-3.2.0RC2"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}

sha512sums="056dec58734dc2171429d1b33a74be829f78ab993f0f1699d9f61b105d4252e35c4e05dbda9e045ed3364d82779c662c2f28c63cdac1b81027549335b5376845  memcached-3.2.0RC2.tgz"

