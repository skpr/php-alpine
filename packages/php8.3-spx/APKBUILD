# Maintainer: Nick Schuch <nick.schuch@skpr.io>

pkgname=php8.3-spx
_pkgreal=spx
pkgver=dcaac57af43d2a886a47aff115302d09a1bff2dd
pkgrel=1
provides="php-spx=8.3"
pkgdesc="SPX - A simple profiler for PHP"
url="https://github.com/NoiseByNorthwest/php-spx"
arch="all"
license="PHP-3"
depends="php8.3-common>=8.3.0 php8.3-common<8.4.0"
makedepends="php8.3-dev>=8.3.0 php8.3-dev<8.4.0 autoconf"
source="php-spx-$pkgver.tar.gz::https://api.github.com/repos/NoiseByNorthwest/php-spx/tarball/dcaac57af43d2a886a47aff115302d09a1bff2dd"
builddir="$srcdir/php-spx-dcaac57af43d2a886a47aff115302d09a1bff2dd"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}

sha512sums="5d9929388bb746554c9ce4648275435d3e9e6309b9cc4b60932f680e811730beecb4dacd12237cdb0968593a7925c76ad9b0cf1aaacc8e6e0d6ac4e1fe51b3f7  php-spx-dcaac57af43d2a886a47aff115302d09a1bff2dd.tar.gz"