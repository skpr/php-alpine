# Maintainer: Nick Schuch <nick.schuch@skpr.io>

pkgname=php8.3-opentelemetry
_pkgreal=otel_instrumentation
pkgver=1.0.0
pkgrel=1
provides="php-opentelemetry=8.3"
pkgdesc="OpenTelemetry - OpenTelemetry extension for PHP"
url="http://pecl.php.net/package/opentelemetry-php-instrumentation"
arch="all"
license="PHP-3"
depends="php8.3-common>=8.3.0 php8.3-common<8.4.0"
makedepends="php8.3-dev>=8.3.0 php8.3-dev<8.4.0 autoconf"
source="$pkgname-$pkgver.tar.gz::https://github.com/open-telemetry/opentelemetry-php-instrumentation/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/opentelemetry-php-instrumentation-$pkgver/ext"

prepare() {
	default_prepare || return 1
}

build() {
	cd "$builddir"
	phpize || return 1
	./configure --prefix=/usr --with-php-config=/usr/bin/php-config || return 1
    make || return 1
}

package() {
	mkdir -p "$pkgdir" || return 1
    install -d $pkgdir/ || return 1
    make -C "$builddir" INSTALL_ROOT="$pkgdir" install || return 1
    install -d "$pkgdir"/etc/php/conf.d || return 1
    echo "extension=$_pkgreal" > "$pkgdir"/etc/php/conf.d/01_$_pkgreal.ini || return 1
}

sha512sums="
9a705450cf6266cc1e9100746ad06d05888828abc67761e3082e131b3c86b06d7ec922239ca53e64f15a47afdd05a2a4aedd082e85ab8b51551894bfb2e1aae1  php8.3-opentelemetry-1.0.0.tar.gz
"
